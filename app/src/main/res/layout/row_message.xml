<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/message_row_height">


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="test"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/messageTitle"
        android:layout_toLeftOf="@+id/messageAudioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageTitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/messageTitle"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="04/08/1995"
        android:id="@+id/messageDate"/>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_volume_up_black_48dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/messageAudioButton"/>

</RelativeLayout>